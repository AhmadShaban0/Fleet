@model IEnumerable<future_1_.Models.Driver>

@{
    ViewData["Title"] = "AllDrivers";
}

<h1>AllDrivers</h1>

<p>
    <a asp-action="Add" class="btn btn-outline-primary">New Driver</a>
</p>
<table class="table table-bordered">
    <thead style="background-color:cornflowerblue">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.trEntity)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.trEntity.ArabicName)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.DriverId" class="btn btn-outline-success">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.DriverId" class="btn btn-outline-warning">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.DriverId" class="btn btn-outline-danger">Delete</a>
                <a asp-action="NewPassword" asp-route-id="@item.DriverId" class="btn btn-outline-secondary">New Password</a>
            </td>
        </tr>
}
    </tbody>
</table>
