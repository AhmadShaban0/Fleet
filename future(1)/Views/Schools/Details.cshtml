 @model future_1_.Models.School

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>School</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArabicName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArabicName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnglishName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnglishName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LogoFile)
        </dt>
        <dd class="col-sm-10">
            <img src="@("~/image/"+Model.LogoName)" asp-append-version="true" width="250px" height="250px" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SchoolType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SchoolType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Region)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Region.ArabicName) @*1*@

            @*@ViewBag.Message     2
            @ViewData["Message"]  3
            @TempData["Message"]  4*@
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.SchoolId" class="btn btn-primary">Edit</a> 
    <a asp-action="AllSchools" class="btn btn-primary">Back to List</a>
</div>
